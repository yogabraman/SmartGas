<!--            android:layout_height="wrap_content"-->
<!--            android:text="GRAFIK PEMAKAIAN GAS LPG"-->
<!--            android:padding="10dp"-->
<!--            android:gravity="center"-->
<!--            android:textStyle="bold"-->
<!--            android:clickable="true"-->
<!--            android:textSize="20sp"/>-->

        <Button
            android:id="@+id/btn_ganti"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Riwayat Ganti LPG"
            android:background="@drawable/orange_button"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rata-rata penggunaan gas setiap harinya : "
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"/>
            <TextView
                android:id="@+id/rerata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 %"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediksi gas LPG habis : "
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/prediksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 hari lagi"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Tahun dan Bulan"/>
            <Spinner
                android:id="@+id/tahun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/bulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:scrollbars="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true"/>


